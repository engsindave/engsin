<tr>
  <td><%= post.published_at.strftime('%d %b, %Y') %></td>
  <td><%= link_to (post.title == '' ? '[Untitled]' : truncate(post.title, :length => 30)), admin_post_path(post) %></td>
  <td><% tmpc = truncate(post.body, :length => 100) %><%= (tmpc != '' ? tmpc : '&nbsp;') %></td>
  <td><%= post.approved_comments.size %></td>
  <td>
		<%= link_to(image_tag('silk/pencil.png', :alt => 'Edit'), admin_post_path(post), class: 'pull-left') %>
		<%= form_for(post, :as => :post, :url => admin_post_path(post), :html => {:class => 'delete-item pull-left', :method => :delete}) do |form| -%>
      <%= image_submit_tag("silk/delete.png", :alt => 'Delete Post') %>
    <% end -%>
  </td>
</tr>
