<div class="well">
	<%= form_for([:admin, @page], :html => {class: 'form-horizontal'}) do |f| -%>
		<div class="control-group">
			<%= f.label :title, 'Title', class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :title, class: 'input-xxlarge' %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :body, 'Body', class: 'control-label' %>
			<div class="controls">
				<%= f.text_area :body, class: 'input-xxlarge', rows: '12' %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :slug, 'Permalink', class: 'control-label' %>
			<div class="controls">
				<%= f.text_field :slug %>
				<span class="help-inline">Leave blank for an auto-generated permalink based on the title.</span>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :page_order, 'Page Order', class: 'control-label' %>
			<div class="controls">
				<%= f.number_field :page_order, :in => 1...6 %>
				<span class="help-inline">Order of link appearance in navigation bar (1 first, 5 last).</span>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<%= f.submit class: 'btn' %>
			</div>
		</div>
	<% end %>
</div>
