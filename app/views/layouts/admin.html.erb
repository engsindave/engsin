<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<head>
  <meta charset="utf-8">
  <title><%= enki_config[:title] %> - Admin</title>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag 'admin' %>
  <%= stylesheet_link_tag 'admin' %>
  <%= yield(:head) %>
  <% if flash[:notice] -%>
    <%= javascript_tag do -%>
      $(function() {
        humanMsg.displayMsg('<%= escape_javascript(flash[:notice]) %>');
      })
    <% end -%>
  <% end -%>
</head>
<body>
	<div class="container-fluid">
		<div id="admin-push"></div>
		<div class="navbar navbar-fixed-top navbar-inverse">
		  <div class="navbar-inner">
				<div class="container-fluid">
			    <%= link_to 'Administrator', admin_root_path, class: 'brand' %>
					<ul class="nav">
		        <%= nav_link_to("Dashboard", admin_root_path,       :accesskey => '1') %>
		        <%= nav_link_to("Posts",     admin_posts_path,      :accesskey => '2') %>
		        <%= nav_link_to("Pages",     admin_pages_path,      :accesskey => '3') %>
		        <%= nav_link_to("Comments",  admin_comments_path,   :accesskey => '4') %>
		        <%= nav_link_to("Actions",   admin_undo_items_path, :accesskey => '5') %>
		        <%= nav_link_to("Health",    admin_health_path,     :accesskey => '6') %>
		      </ul>
					<ul class="nav pull-right">
						<%= nav_link_to("New Post", new_admin_post_path, :accesskey => 'n') %>
						<%= nav_link_to("New Page", new_admin_page_path, :accesskey => 'p') %>
						<li><%= link_to("View Site", '/',             :accesskey => 'v', :title => 'View Site') %></li>
						<li><%= link_to("Logout", admin_session_path, :accesskey => 'l', :method => :delete) %></li>
					</ul>
				</div>
		  </div>
		</div>
    <%= yield %>
	</div>
</body>
</html>
