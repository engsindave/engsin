<div id="header">
	<%= link_to image_tag('/assets/rails.png', alt: 'rails'), root_path %>
</div>
<div class="navbar">
  <div class="navbar-inner">
		<div class="container">
	    <%= link_to enki_config[:title], root_path, class: 'brand', style: "display: none;" %>
			<ul class="nav">
	      <% page_links_for_navigation.each do |link| -%>
          <li class="<%= "active" if link.url == request.fullpath %>"><%= link_to(link.name, link.url) %></li>
        <% end -%>
	    </ul>
			<form method="get" id="sform" action="http://www.google.com/search" class="navbar-search pull-right">
			  <input type="text" id="q" class="search-query" placeholder="Search">
				<%= hidden_field_tag 'sitesearch', enki_config[:url] %>
			</form>
		</div>
  </div>
</div>
